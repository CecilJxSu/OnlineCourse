<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.canlnac.course.dao.DocumentDao">
    <resultMap id="document" type="cn.canlnac.course.entity.Document">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="date" property="date" jdbcType="DATE"/>
        <result column="target_type" property="targetType" jdbcType="VARCHAR"/>
        <result column="target_id" property="targetId" jdbcType="INTEGER"/>
        <result column="url" property="url" jdbcType="VARCHAR"/>
        <result column="type" property="type" jdbcType="VARCHAR"/>
        <result column="size" property="size" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--创建文档-->
    <insert id="create" useGeneratedKeys="true" keyProperty="id" parameterType="cn.canlnac.course.entity.Document">
        INSERT INTO document(date,target_type,target_id,url,`type`,`size`,name)
        VALUES (now(),#{targetType},#{targetId},#{url},#{type},#{size},#{name})
    </insert>

    <!--根据ID获取文档-->
    <select id="findByID" resultMap="document">
        SELECT *
        FROM document
        WHERE id = #{id}
    </select>

    <!--统计文档数目-->
    <select id="count" resultType="Integer">
        SELECT COUNT(*)
        FROM document
        WHERE target_type = #{targetType}
              AND target_id = #{targetId}
    </select>

    <!--获取指定类型和目标下的文档-->
    <select id="getDocuments" resultMap="document">
        SELECT *
        FROM document
        WHERE target_type = #{targetType}
              AND target_id = #{targetId}
        ORDER BY ${sort} DESC
        LIMIT #{start},#{count}
    </select>

    <!--删除文档-->
    <delete id="delete">
        DELETE FROM document WHERE id = #{id}
    </delete>
</mapper>