<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.canlnac.course.dao.FavoriteDao">
    <resultMap id="favorite" type="cn.canlnac.course.entity.Favorite">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="date" property="date" jdbcType="TIMESTAMP"/>
        <result column="target_type" property="targetType" jdbcType="VARCHAR"/>
        <result column="target_id" property="targetId" jdbcType="INTEGER"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
    </resultMap>

    <resultMap id="profile" type="cn.canlnac.course.entity.Profile">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="university_id" property="universityId" jdbcType="VARCHAR"/>
        <result column="nickname" property="nickname" jdbcType="VARCHAR"/>
        <result column="realname" property="realname" jdbcType="VARCHAR"/>
        <result column="gender" property="gender" jdbcType="VARCHAR"/>
        <result column="icon_url" property="iconUrl" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="CHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="department" property="department" jdbcType="VARCHAR"/>
        <result column="major" property="major" jdbcType="VARCHAR"/>
        <result column="dormitory_address" property="dormitoryAddress" jdbcType="VARCHAR"/>
    </resultMap>

    <!--创建浏览记录-->
    <insert id="create" >
        INSERT INTO favorite(date,target_type,target_id,user_id)
        VALUES (now(),#{targetType},#{targetId},#{userId})
    </insert>

    <!--取消浏览记录-->
    <delete id="delete" >
        DELETE FROM favorite
        WHERE target_type = #{targetType}
        AND target_id = #{targetId}
        AND user_id = #{userId}
    </delete>

    <!--统计该（课程/话题/文档）下的用户浏览数-->
    <select id="count" resultType="Integer">
        SELECT COUNT(*)
        FROM favorite
        WHERE target_type = #{targetType}
        AND target_id = #{targetId}
    </select>

    <select id="getUsers" resultMap="profile">
        SELECT p.user_id,p.nickname,p.gender,p.icon_url
        FROM favorite f,profile p
        WHERE f.user_id = p.user_id
        AND f.target_type = #{targetType}
        AND f.target_id = #{targetId}
        Limit #{start},#{count}
    </select>

    <!--用户是否收藏了该对象-->
    <select id="isFavorite" resultType="java.lang.Integer">
        SELECT count(*)
        FROM favorite
        WHERE user_id = #{userId}
              AND target_type = #{targetType}
              AND target_id = #{targetId}
    </select>

    <!--获取用户收藏数-->
    <select id="countFavorite" resultType="Integer">
        SELECT count(*)
        FROM favorite
        WHERE user_id = #{userId}
        AND target_type = #{targetType}
    </select>

    <!--获取用户收藏-->
    <select id="getFavorite" resultMap="favorite">
        SELECT *
        FROM favorite
        WHERE user_id = #{userId}
        AND target_type = #{targetType}
        Limit #{start},#{count}
    </select>
</mapper>