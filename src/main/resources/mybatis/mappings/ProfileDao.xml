<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.canlnac.course.dao.ProfileDao">
    <resultMap id="profile" type="cn.canlnac.course.entity.Profile">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="university_id" property="universityId" jdbcType="VARCHAR"/>
        <result column="nickname" property="nickname" jdbcType="VARCHAR"/>
        <result column="realname" property="realname" jdbcType="VARCHAR"/>
        <result column="gender" property="gender" jdbcType="VARCHAR"/>
        <result column="icon_url" property="iconUrl" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="CHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="department" property="department" jdbcType="VARCHAR"/>
        <result column="major" property="major" jdbcType="VARCHAR"/>
        <result column="dormitory_address" property="dormitoryAddress" jdbcType="VARCHAR"/>
    </resultMap>

    <!--创建用户资料-->
    <insert id="create" useGeneratedKeys="true" keyProperty="id" parameterType="cn.canlnac.course.entity.Profile">
        INSERT INTO profile
            <trim prefix="(" suffix=")" suffixOverrides="," >
                user_id,
                <if test="universityId != null">
                    university_id,
                </if>
                <if test="nickname != null">
                    nickname,
                </if>
                <if test="realname != null">
                    realname,
                </if>
                <if test="gender != null">
                    gender,
                </if>
                <if test="iconUrl != null">
                    icon_url,
                </if>
                <if test="phone != null">
                    phone,
                </if>
                <if test="email != null">
                    email,
                </if>
                <if test="department != null">
                    department,
                </if>
                <if test="major != null">
                    major,
                </if>
                <if test="dormitoryAddress != null">
                    dormitory_address,
                </if>
            </trim>
        VALUE
            <trim prefix="(" suffix=")" suffixOverrides="," >
                #{userId},
                <if test="universityId != null">
                    #{universityId},
                </if>
                <if test="nickname != null">
                    #{nickname},
                </if>
                <if test="realname != null">
                    #{realname},
                </if>
                <if test="gender != null">
                    #{gender},
                </if>
                <if test="iconUrl != null">
                    #{iconUrl},
                </if>
                <if test="phone != null">
                    #{phone},
                </if>
                <if test="email != null">
                    #{email},
                </if>
                <if test="department != null">
                    #{department},
                </if>
                <if test="major != null">
                    #{major},
                </if>
                <if test="dormitoryAddress != null">
                    #{dormitoryAddress},
                </if>
            </trim>
    </insert>

    <!--更新用户资料-->
    <update id="update" parameterType="cn.canlnac.course.entity.Profile">
        UPDATE profile
        <trim prefix="SET" suffixOverrides=",">
            <if test="universityId != null">
                university_id = #{universityId},
            </if>
            <if test="nickname != null">
                nickname = #{nickname},
            </if>
            <if test="realname != null">
                realname = #{realname},
            </if>
            <if test="gender != null">
                gender = #{gender},
            </if>
            <if test="iconUrl != null">
                icon_url = #{iconUrl},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="department != null">
                department = #{department},
            </if>
            <if test="major != null">
                major = #{major},
            </if>
            <if test="dormitoryAddress != null">
                dormitory_address = #{dormitoryAddress},
            </if>
        </trim>
        WHERE user_id = #{userId}
    </update>

    <!--根据用户ID获取用户资料-->
    <select id="findByUserID" resultMap="profile">
        SELECT * FROM profile WHERE user_id = #{userId}
    </select>
</mapper>