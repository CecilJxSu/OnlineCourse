<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.canlnac.course.dao.QuestionDao">
    <resultMap id="question" type="cn.canlnac.course.entity.Question">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="date" property="date" jdbcType="DATE"/>
        <result column="catalog_id" property="catalogId" jdbcType="INTEGER"/>
        <result column="index" property="index" jdbcType="INTEGER"/>
        <result column="type" property="type" jdbcType="INTEGER"/>
        <result column="question" property="question" jdbcType="VARCHAR"/>
        <result column="answer" property="answer" jdbcType="VARCHAR"/>
        <result column="item" property="item" jdbcType="VARCHAR"/>
        <result column="explains" property="explains" jdbcType="VARCHAR"/>
        <result column="url" property="url" jdbcType="VARCHAR"/>
        <result column="score" property="score" jdbcType="REAL"/>
    </resultMap>

    <!--创建问题-->
    <insert id="create" useGeneratedKeys="true" parameterType="java.util.List">
        INSERT INTO question (date,catalog_id,`index`,type,question,answer,item,explains,url,score)
        VALUES
        <foreach collection="questions" item="question" index="index" separator=",">
            (now(),#{question.catalogId},#{question.index},#{question.type},#{question.question},#{question.answer},#{question.item},#{question.explains},#{question.url},#{question.score})
        </foreach>
    </insert>

    <!--更新问题-->
    <update id="update" parameterType="cn.canlnac.course.entity.Question">
        UPDATE question
        SET
        <trim prefix="" suffixOverrides=",">
            <if test="catalogId != 0">
                catalog_id = #{catalogId},
            </if>
            <if test="index != 0">
                `index` = #{index},
            </if>
            <if test="type != 0">
                `type` = #{type},
            </if>
            <if test="question != null">
                question = #{question},
            </if>
            <if test="answer != null">
                answer = #{answer},
            </if>
            <if test="item != null">
                item = #{item},
            </if>
            <if test="explains != null">
                explains = #{explains},
            </if>
            <if test="url != null">
                url = #{url},
            </if>
            <if test="score != 0">
                score = #{score},
            </if>
        </trim>
        WHERE id = #{id}
    </update>

    <!--获取某个章节下的所有小测-->
    <select id="getQuestions" resultMap="question">
        SELECT * FROM question WHERE catalog_id = #{catalogId}
    </select>

    <!--删除小测-->
    <delete id="delete">
        DELETE FROM question WHERE id = #{id}
    </delete>
</mapper>